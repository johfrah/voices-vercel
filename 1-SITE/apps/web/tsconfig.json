{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@config/*": ["./src/lib/core-internal/*"],
      "@db": ["./src/lib/core-internal/database/index.ts"],
      "@db/*": ["./src/lib/core-internal/database/*"],
      "@db-service": ["./src/lib/db-service.ts"],
      "@database/*": ["./src/lib/core-internal/database/*"],
      "@legacy/*": ["./../../legacy/*"],
      "@voices/database": ["./src/lib/core-internal/database/index.ts"],
      "@voices/database/*": ["./src/lib/core-internal/database/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "bin", "scripts", "*.ts"]
}
